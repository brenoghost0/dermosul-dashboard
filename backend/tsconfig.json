{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["./data/**/*.ts", "./server.ts", "./utils/**/*.ts", "./prisma/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
