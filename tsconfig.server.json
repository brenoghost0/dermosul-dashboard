{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-server",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "esModuleInterop": true
  },
  "include": [
    "src/server.ts",
    "src/api.ts",
    "src/data",
    "src/db",
    "src/lib",
    "src/workers",
    "src/utils",
    "node_modules/@types"
  ],
  "exclude": [
    "src/lib/api.ts",
    "src/lib/media.ts"
  ]
}
